@model TM.RestHour.Models.CrewTimesheetViewModel

@{
    ViewBag.Title = "ReportDailyTemperature";
}

<h2>ReportDailyTemperature</h2>

<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
