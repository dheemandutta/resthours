@*@model TM.RestHour.Models.Equipments*@
@model TM.RestHour.Models.CrewTimesheetViewModel

@{
    ViewBag.Title = "JoiningMedicalReport";
}
<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/select.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/rowReorder.dataTables.min.css" rel="stylesheet" />

<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
@*<link href="~/link/css/vissel.css" rel="stylesheet" />*@
<link href="~/link/css/rank.css" rel="stylesheet" />

<script src="~/Scripts/CrewHealth.js"></script>
<style>
    .button1 {
        position: relative;
        background-color: #22BAA0;
        border: none;
        font-size: 13px;
        color: #FFFFFF;
        padding: 8px;
        width: 199px;
    }

    .bac {
        border-radius: 0;
        padding: 18px;
        background: #fff;
        margin: 0 -29px;
        border-radius: 6px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, .5);
        height: 440px;
    }
</style>

<body style="background-image: url(../background/Health.jpg);
    background-size: cover;">

    <div class="row">
        <div class="col-md-6">
            <h2 class="ta" style="color:#000;">Joining Medical Report</h2>
        </div>
        <div class="col-md-6 bac">
            <div class="">

                <div style="margin:0 auto" class="tablecontainer">
                    @*<button type="button" class="button" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New Vessel</button><br /><br />*@
                    @Html.Hidden("GetCrewDetailsForHealth", @Url.Action("GetCrewDetailsForHealthByID", "CrewHealth"))
                    @Html.Hidden("GetJoiningMedicalFileDatawByID", @Url.Action("GetJoininingMedicalByCrewId", "CrewHealth"))
                    <input type="hidden" id="hdncount" />
                    <input type="hidden" id="hdnrole" />
                    <div class="">
                        <form>
                            <div class="form-group">
                                <input type="hidden" id="ID" />
                            </div>

                            <div class="card">
                                <div class="row" style="padding-left:11px;">
                                    <div class="col-md-4">
                                        @Html.HiddenFor(model => model.Crew.ID, new { id = "hdnCrewId", value = Model.Crew.ID })
                                        <label for="selectCrew" class="control-label">Select Crew</label><br />
                                        @Html.DropDownListFor(model => model.Crew.ID, (IEnumerable<SelectListItem>)ViewBag.Crew, "Select", new { @class = "form-control", @id = "ddlCrew" })
                                        @*<select id="ddlCrew" name="Id" class="form-control"></select>*@
                                    </div>
                                    <div class="col-md-4">
                                        <label for="Date">Date</label>
                                        <input type="text" class="form-control" id="ActiveFrom" placeholder="Date" disabled />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="Name">Name</label>
                                        <input type="text" class="form-control" id="Name" placeholder="Name" disabled />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="DOB">Date Of Birth</label>
                                        <input type="text" class="form-control" id="DOB" placeholder="DOB" disabled />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="RankName">Rank Name</label>
                                        <input type="text" class="form-control" id="RankName" placeholder="RankName" disabled />
                                    </div>
                                </div>
                                <div class="export-template-label" style="display:inline-block;float: right; margin-right: 13px;">
                                    <a href="../../MedicalHistory/Medical Fermin.pdf" target="_self" download>
                                        <img src="#" alt="Download Joining Medical" style="float:left;" class="button1">
                                    </a>
                                </div>
                            </div>


                        </form>

                    </div>
                </div>
            </div>

            <br />
            <br />



            <iframe src="@Url.Action("GetPDF")" width="100%" height="55%" style="margin-top:20px;"></iframe>

            @section Scripts
{
                @Scripts.Render("~/bundles/jqueryval")
                @Scripts.Render("~/bundles/jqueryui")
                @Styles.Render("~/Content/themes/base/css")

                <script src="~/Scripts/DataTables/dataTables.select.min.js"></script>
                <script src="~/Scripts/DataTables/dataTables.rowReorder.min.js"></script>






                <script type="text/javascript">

                    $(document).ready(function () {

                        $('#ddlCrew').on('change', function () {
                            //alert(hello);

                            //var ID = $('#ddlCrew').val();

                            GetCrewDetailsForHealthByID();
                            //GetJoiningMedicalFileDatawByID(); ///////////////////////////////////////////////////////////////////////// deep

                        });

                        // GetCrewDetailsForHealthByID();


                    });

                    var loggedInUserId = $('#hdnCrewId').val();

                    if (loggedInUserId > 0) { // user level log in

                        $('#ddlCrew').val(loggedInUserId);
                        $("#ddlCrew").prop("disabled", true);

                        GetCrewDetailsForHealthByID();
                    }

                </script>
            }
            
        </div>
</body>

