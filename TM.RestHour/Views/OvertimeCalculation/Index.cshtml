                $('#Fri-value').text(value);
            }
            function outputSat(state, value) {
                $('#Sat-value').text(value);
            }
            function outputSun(state, value) {
                $('#Sun-value').text(value);
            }





            var Mon = $('#Mon').tristate({
                checked: "1",
                unchecked: "0",
                indeterminate: "2",

                init: outputMon,
                change: outputMon
            });
            var Tue = $('#Tue').tristate({
                checked: "1",
