<body>
    <div class="row">
        <div class="head_title">
            <h2 class="ta">Overtime Calculation</h2>
        </div>
        <div class="">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="DailyWorkHours">Daily Work Hours</label>
                                    <select id="DailyWorkHours" style="width:100%;" class="form-control">
                                        <option value="">Select</option>
                                        <option value="7">7 hours</option>
                                        <option value="8">8 hours</option>
                                        <option value="12">12 hours</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="HourlyRate">Hourly Rate</label>
                                    <input type="number" class="form-control" id="HourlyRate" placeholder="Hourly Rate" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="FixedWorkHour">Fixed Work Hour</label>
                                    <input type="number" class="form-control" id="FixedWorkHour" value="0" disabled />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="FixedOvertime">Fixed Overtime</label>
                                    <input type="number" class="labelmax form-control" id="FixedOvertime" placeholder="Fixed Overtime" value='0' min="1" max="160" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <input type="hidden" id="isWeekly" name="isWeekly" value="">
                                <div class="form-group">
                                    <label for="HoursPerWeekOrMonth">Hours Per Week/Month</label>
                                    <div class="col-sm-6 col-xs-6">
                                        <input type="radio" id="Month" name="HoursPerWeekOrMonth" value="0"> Month
                                    </div>
                                    <div class="col-sm-6 col-xs-6">
                                        <input type="radio" id="Week" name="HoursPerWeekOrMonth" value="1" checked> Week
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group onelinecheckbox" id="week">
                                    <div><input id="Mon" type="checkbox">Mon<span id="Mon-value" class="output" style="color:#fff"></span></div>
                                    <div><input id="Tue" type="checkbox">Tue<span id="Tue-value" class="output" style="color:#fff"></span></div>
                                    <div><input id="Wed" type="checkbox">Wed<span id="Wed-value" class="output" style="color:#fff"></span></div>
                                    <div><input id="Thu" type="checkbox">Thu<span id="Thu-value" class="output" style="color:#fff"></span></div>
                                    <div><input id="Fri" type="checkbox">Fri<span id="Fri-value" class="output" style="color:#fff"></span></div>
                                    <div><input id="Sat" type="checkbox">Sat<span id="Sat-value" class="output" style="color:#fff"></span></div>
                                    <div><input id="Sun" type="checkbox">Sun<span id="Sun-value" class="output" style="color:#fff"></span></div>
                                    @*<div>Current value returned by <code>$.val()</code>: <span id="tristate-value" class="output"></span></div>*@
                                </div>
                            </div>

                            <div class="col-md-12">
                                <button type="button" class="button1 savebtn" id="btnShow" onclick="return SaveOvertimeCalculation();" style="width:138px;">Save</button>
                                </div>

                            </div>
                        </div>
                </div>
            </div>
        </div>


        @*<div class="col-md-7 bac">
                <div><input type="file" name="UploadFile" id="txtUploadFile" class="makethispretty" /></div>
            </div>*@





    </div>
    </div>
</body>


