                this.value = max;
            }
        }





        $(document).ready(function () {

            GetOvertimeCalculation();
            //SetUpGrid();
            //SetUpGridloadDataPrint();
            $("#DailyWorkHours").change(function () {
                calc();
            });




        });


        $(function () {

            function outputMon(state, value) {
                $('#Mon-value').text(value);
            }
            function outputTue(state, value) {
                $('#Tue-value').text(value);
            }
            function outputWed(state, value) {
                $('#Wed-value').text(value);
            }
            function outputThu(state, value) {
                $('#Thu-value').text(value);
            }
