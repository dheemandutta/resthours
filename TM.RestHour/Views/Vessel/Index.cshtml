        <script src="~/Scripts/DataTables/dataTables.rowReorder.min.js"></script>

        <script type="text/javascript">
            $(document).ready(function () {

                if ($('#isSuperAdminUser').val() == "True") {
                    GetShip();
                }
                else {
                    GetShip();
                }
                GetVesselTypeForDrp();

                //$('#VesselTypeID').trigger("change");
            });

            $('#VesselTypeID').on('change', function () {
                //alert($('option:selected', this).text());

                var VesselTypeID = $('#VesselTypeID').val();
                console.log('hi');
                console.log(VesselTypeID);

                GetVesselSubTypeByVesselTypeIDForDrp(VesselTypeID);
            });

            $('#VesselSubTypeID').on('change', function () {
                //alert($('option:selected', this).text());

                var VesselSubTypeID = $('#VesselSubTypeID').val();
                //console.log('hi');
