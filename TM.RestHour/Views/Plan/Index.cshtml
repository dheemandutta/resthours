@*<h2>Plan</h2>*@

<script src="~/Scripts/Plan.js"></script>

<div class="">
    <div class="head_title">
        <h1 class="ta">Plan</h1>
    </div>
    <div id="dvParent">
        <input type="button" value="Add Category" class="btn btn-info btn-sm" data-toggle="modal" data-target="#createPlanCategoryModal" />
        <div class="clearfix"> &nbsp; &nbsp; &nbsp;</div>
        @if (Model.PlanCategoryList.Count > 0)
        {
            foreach (var category in Model.PlanCategoryList)
            {
                <div class="newcard">
                    <div class="row">
                        <div class="col-lg-11"><h4> @category.CategoryName  </h4></div>
                        <div class="col-lg-1"> <input type="button" value="Add Plan" class="btn btn-info btn-sm" onclick="ShowUploadModal('@category.CategoryId','@category.CategoryName','0', '','Add New Plan');" /></div>

                        <div class="row" style="width:90%">
                            @if (category.PlanList.Count > 0)
                            {
                                foreach (var plan in category.PlanList)
                                {
                                    int i = 1;
                                    <div class="row" style="width:100%; margin-left:10px;">

                                        <div class="col-lg-1">@i</div>
                                        <div class="col-lg-7"><h5> @plan.PlanName </h5></div>
                                        <div class="col-lg-2">
                                            <input type="button" value="View" class="btn btn-info btn-sm" onclick="PreviewModal('@plan.PlanId', '@plan.PlanName','@plan.PlanImagePath');" />
                                            <input type="button" value="Edit" class="btn btn-info btn-sm" data-toggle="modal" onclick="ShowUploadModal('@category.CategoryId','@category.CategoryName','@plan.PlanId', '@plan.PlanName','Update Plan');" />
                                        </div>
                                        @*<div class="col-lg-2"><input type="button" value="Edit" class="btn btn-info btn-sm" data-toggle="modal" onclick="ShowUploadModal('@category.CategoryId','@category.CategoryName','@plan.PlanId', '@plan.PlanName','Update Plan');" /></div>*@

                                    </div>
                                    i++;
                                }
                            }
                            else
                            {
                                <div><h3>There is no Plan</h3></div>

                            }
                        </div>

                    </div>
                </div>

            }



        }
        else
        {

            <div>
                <h4>There is no content</h4>
            </div>
        }

    </div>
    <div class="modal fade" id="createPlanCategoryModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="width:890px;">
            <div class="modal-content">
                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title" id="myModalLabelCat">Create New Category</h4>
                </div>

                <div class="card-body" id="dvuserdetailsn" style="width: 802px;">

                    <fieldset class="for-panel">
                        
                        <div class="row">
                            <div class="col-md-8" style="border: 1px solid #eee; padding: 10px;">
                                <div class="form-group">
                                    <label for="CategoryName">Category Name</label>
                                    <input type="text" class="form-control" id="CategoryName" placeholder="Category Name"  />
                                </div>
                            </div>

                            <div class="col-md-8" style="border: 1px solid #eee; padding: 10px;">
                                <div class="form-group">
                                    <button type="button" class="buttonpop" value="" id="btnAddPlanCategory" onclick="AddPlanCategory();" style="width:86px;">Add</button>
                                </div>
                            </div>
                            


                            <div class="col-sm-3" style="width: 63%;"></div>
                            <div class="col-sm-3" style="width: 63%;"></div>
                            <div class="col-sm-3" style="width: 63%;"></div>
                            <div class="col-sm-3" style="width: 63%;"></div>

                            <div class="form-group">
                                @*<input type="hidden" id="hdnPlanID" class="form-control" value="0" />
                                <input type="hidden" id="hdnPlanCategoryId" value="" />
                                <input type="hidden" id="hdnPlanImagePath" value="" />*@
                            </div>

                        </div>
                    </fieldset>
                </div>

                <div class="modal-footer">
                    <label class="hidden" id="lblSuccMsg"></label>
                    @*<button type="button" class="buttonpop" id="btnAdd" onclick="return Add();" style="width:86px;">Add</button>*@
                    @*<button type="button" class="buttonpop" id="btnUpdate" style="display:none; width:86px;" onclick="Add();">Update</button>*@
                    <button type="button" class="btn btn-default" data-dismiss="modal" style="width:86px;">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="viewPlanModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title colorWhite" id="hHeader"></h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>


                <div class="modal-body">
                    @*<form>*@

                    <div class="row">
                        <div class="col-sm-12 col-xs-12">
                            <div class="card backtt">
                                <div id="pdfContent" class="">
                                    <embed id="embedPDF" src="" width="100%" height="600px;" />

                                </div>
                            </div>
                        </div>

                    </div>
                    @*</form>*@

                </div>


                <div class="modal-footer" style="background-color:lightgray;">
                    @*<button type="button" class="btn btn-info btn-sm" style="background-color: #e90000; width:138px;" id="btnAdd" onclick="return UploadFilledUpFormNew();">Upload</button>*@
                    <button type="button" class="btn btn-info btn-sm" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
    <div class="modal fade" id="uploadPlanModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="width:890px;">
            <div class="modal-content">
                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title" id="myModalLabel"></h4>
                </div>

                <div class="card-body" id="dvuserdetailsn" style="width: 802px;">

                    <fieldset class="for-panel">
                        @*<legend>Upload</legend>*@
                        <div class="row">
                            @*<div class="col-md-8" >
                                <div class="form-group">
                                    <select id="ddlPlan" name="Plan" class="form-control" style="display:none;"></select>
                                </div>
                            </div>*@
                            <div id="dvPlanName" style="display:none;" class="col-md-8" @*style="border: 1px solid #eee; padding: 10px;"*@>
                                <div class="form-group">
                                    <label for="PlanName">Plan Name</label>
                                    <input type="text" class="form-control" id="PlanName" placeholder="Plan Name" />
                                </div>
                            </div>
                            <div class="col-md-8" @*style="border: 1px solid #eee; padding: 10px;"*@>
                                <div class="form-group">
                                    <input id="uploadPlanImage" multiple maxlength="4" name="upload" type="file" accept="application/pdf" />
                                </div>
                            </div>
                            <div class="col-md-8" style="border: 1px solid #eee; padding: 10px;">
                                <div class="form-group">
                                    @*<button type="button" class="buttonpop" onclick="  uploadFile($('#upload'));" style="width:86px;">Upload</button>*@
                                    <button type="button" class="buttonpop" value="" id="btnUploadPlan" onclick="UploadPlanFile();" style="width:86px;">Upload</button>
                                </div>
                            </div>

                            


                            <div class="col-sm-3" style="width: 63%;"></div>
                            <div class="col-sm-3" style="width: 63%;"></div>
                            <div class="col-sm-3" style="width: 63%;"></div>
                            <div class="col-sm-3" style="width: 63%;"></div>

                            <div class="form-group">
                                <input type="hidden" id="hdnPlanID" class="form-control" value="0" />
                                <input type="hidden" id="hdnPlanCategoryId" value="" />
                                <input type="hidden" id="hdnPlanImagePath" value="" />
                            </div>

                        </div>
                    </fieldset>
                </div>

                <div class="modal-footer">
                    <label class="hidden" id="lblSuccMsg"></label>
                    @*<button type="button" class="buttonpop" id="btnAdd" onclick="return Add();" style="width:86px;">Add</button>*@
                    @*<button type="button" class="buttonpop" id="btnUpdate" style="display:none; width:86px;" onclick="Add();">Update</button>*@
                    <button type="button" class="btn btn-default" data-dismiss="modal" style="width:86px;">Close</button>
                </div>
            </div>
        </div>
    </div>


</div>




