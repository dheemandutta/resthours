    <script src="~/Scripts/toastr.min.js"></script>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />

    <script type="text/javascript">

        // var saveurl = $('#Save').val();
        var posturl = $('#Add').val();

        $(document).ready(function () {


            SetUpGrid();



            var orderCount = 0;






            var GroupsJsonObject = { WF: [] };

            $('#btnSave').on('click', function () {
                var res = validate();
                if (res == false) {
                    return false;
                }
                else {
                    var checkedIds = $('#ddlgrp').val();
                    //GroupsJsonObject.WF.push({ d: checkedIds.join(",") });

                    $.ajax({
                        url: posturl,
                        data:
                        JSON.stringify({

                            Username: $('#Username').val(),
                            Password: $('#Password').val(),
                            SelectedGroupID: $('#ddlgrp').val(),
                            CrewID: $('#ddlCrew').val()
                        }),
                        type: "POST",
                        contentType: "application/json;charset=utf-8",
                        dataType: "json",
                        success: function (result) {
                            $('#Username').val("");
                            $('#Password').val("");
                            ClearValues();
                           // alert('Data Saved Successfully');

                            toastr.options = {
                                "closeButton": false,
                                "debug": false,
                                "newestOnTop": false,
                                "progressBar": false,
                                "positionClass": "toast-bottom-full-width",
                                "preventDuplicates": false,
                                "onclick": null,
                                "showDuration": "300",
                                "hideDuration": "1000",
                                "timeOut": "5000",
                                "extendedTimeOut": "1000",
                                "showEasing": "swing",
                                "hideEasing": "linear",
                                "showMethod": "fadeIn",
                                "hideMethod": "fadeOut"
                            };

                            toastr.success("Data Saved Successfully");
                            SetUpGrid();
                        }
                    });
                }


            });

            function ClearValues() {
                // $('#RankID').val();
                $("#RankID option:selected").removeAttr("selected");
                $('#ddlgrp option:selected').each(function () {
                    $(this).prop('selected', false);
                })
                $('#ddlgrp').multiselect('refresh');


            }

            var userName = getParameterByName('username');
            $('#Username').val(userName);
            $('#Username').prop("disabled", true);

            var selectedgroupId = getParameterByName('grp');
            $('#ddlgrp').val(selectedgroupId);
            //$("#ddlgrp").prop("disabled", true);

            var crewId = getParameterByName('crewId');
            $('#ddlCrew').val(crewId);
            $('#ddlCrew').prop('disabled', true);


        });


        function getParameterByName(name, url) {
            if (!url) url = window.location.href;
            name = name.replace(/[\[\]]/g, "\\$&");
            var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
                results = regex.exec(url);
            if (!results) return null;
            if (!results[2]) return '';
            return decodeURIComponent(results[2].replace(/\+/g, " "));
        }
    </script>
