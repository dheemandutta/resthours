@model TM.RestHour.Models.Consultant


@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/Consultant.js"></script>
<script src="~/Scripts/notify.min.js"></script>
<script src="~/Scripts/toastr.min.js"></script>
<link href="~/Content/toastr.min.css" rel="stylesheet" />

@Html.Hidden("myUrlid", @Url.Action("GetDoctorBySpecialityID", "PatientProblem"))
@Html.Hidden("SaveConsultation", @Url.Action("SaveConsultation", "PatientProblem"))

<div>
    <form>
        @*<div class="form-group">
                <input type="hidden" id="ID" />
            </div>*@

        <div class="col-sm-4">
            <div class="card">

                <div class="form-group">
                    <label for="Problem">Problem</label>
                    <textarea class="form-control" id="Problem" cols="7" rows="2"></textarea>
                </div>
                <div class="form-group">
                    <label for="Speciality">Speciality</label>
                    @Html.DropDownListFor(model => model.SpecialityID, (IEnumerable<SelectListItem>)ViewBag.Consultant, "Select", new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <label for="DoctorName">Doctor Name</label>
                    <select id="drpDoctorID" name="DoctorID" class="form-control"></select>
                </div>

                <button type="button" class="button1" id="btnAdd" onclick="return SaveConsultation();" style="width:138px;">Submit </button>

            </div>
        </div>
    </form>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/css")


    <script type="text/javascript">
        //alert('hi');

        $(document).ready(function () {

            $('#SpecialityID').on('change', function () {
                var SpecialityID = $('#SpecialityID').val();
                GetDoctorBySpecialityID(SpecialityID);
            });

        });

    </script>
}
